{
    "name": "@pomora/core",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "bot",
        "web"
    ],
    "scripts": {
        "build:bot": "bun run --filter=@pomora/discord-bot build",
        "build:web": "bun run --filter=@pomora/web build",
        "start:bot": "bun run --filter=@pomora/discord-bot start",
        "start:web": "bun run --filter=@pomora/web start",
        "dev:bot": "cd bot && bun run start",
        "dev:web": "cd web && bun run dev"
    }
}